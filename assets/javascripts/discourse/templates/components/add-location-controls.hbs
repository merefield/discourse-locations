{{#if this.location}}
  <DButton
    @class={{this.valueClasses}}
    @title="location.label.add"
    @action={{action "showAddLocation"}}
    @translatedLabel={{this.valueLabel}}
    @icon="location-dot"
  />
  {{#unless this.noText}}
    <DButton
      @icon="xmark"
      @action={{action "removeLocation"}}
      @class="remove"
    />
  {{/unless}}
{{else}}
  {{#if this.iconOnly}}
    <DButton
      @class="add-location-btn"
      @icon="location-dot"
      @action={{action "showAddLocation"}}
      @title={{this.addLabel}}
    />
  {{else}}
    <DButton
      @class="add-location-btn"
      @icon="location-dot"
      @label={{this.addLabel}}
      @action={{action "showAddLocation"}}
      @title={{this.addLabel}}
    />
  {{/if}}
{{/if}}